.about-container {
  height: auto;
  // max-width: 600px;
  padding: 100px 30px 30px 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ccc;
}
.about-content {
  height: auto;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 5px;
  padding: 1.2rem;
  // padding-left: 5rem;
  line-height: 28px;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.3);
  h1 {
    font-weight: bold;
    font-size: 2.2rem;
    margin: 1.5rem 0 4rem 0;
    text-shadow: 0 2px 5px rgba(255, 255, 255, 0.1);
  }
  h2 {
    font-weight: bold;
    font-size: 1.6rem;
    margin-bottom: 1.5rem;
  }
  h3 {
    font-size: 1.2rem;
    margin-bottom: 20px;
  }
  pre {
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }
}
.about-icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  img {
    height: 180px;
    width: 180px;
    margin: 30px 0;
    border-radius: 100%;
  }
}