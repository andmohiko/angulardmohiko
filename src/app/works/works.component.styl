.transition
  transition .3s cubic-bezier(.3, 0, 0, 1.3)

.work-container
  height auto
  width 800px
  padding 10px
  display flex
  flex-direction column
  justify-content center
  align-items center
  color #ccc


.work-content
  height auto
  width 100%
  border-radius 5px
  padding 1.2rem
  line-height 28px
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.3)
  h1
    font-weight bold
    font-size 2.2rem
    margin 1.5rem 0 4rem 0
    text-shadow 0 2px 5px rgba(255, 255, 255, 0.1)
  
.work-items
  height auto
  width 100%
  display flex
  justify-content space-between
  flex-wrap wrap

.work-card
  width: 350px
  height: 300px
  background-color rgba(0, 0, 0, 0.3)
  box-shadow: 2px 2px 18px 1px rgba(0, 0, 0, 0.7)
  margin-bottom 60px

  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

  img
    margin 0
    padding 0
    width 100%
    height 240px
    object-fit cover

  h2
    font-weight bold
    font-size 20px

.work-card:hover
  box-shadow 0px 30px 30px rgba(0,0,0,0.2)
  width 400px
  height 380px
