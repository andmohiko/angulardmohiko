.header-container
  top 0
  background-color rgba(0, 0, 0, 0)
  max-width 800px
  height 60px
  line-height 60px
  display flex
  justify-content flex-end
  margin 0 auto
  ul
    display flex
  
  li
    margin-left 90px
    list-style-type none
  
  a
    color #ccc
    font-weight bold
    text-decoration none
    font-size 1rem
  
  a:hover
    opacity 0.7
  

.header-logo
  margin 6px 0
  img
    height 25px
  

@media screen and (max-width 750px)
  .header-container
    padding 0
    justify-content center
    li
      margin-left 1.5rem
    
  
  .header-logo
    img
      display none
    
  
