.header-container {
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, 0);
  // width: 100%;
  width: 80%;
  height: 90px;
  line-height: 90px;
  display: flex;
  justify-content: center;
  margin: 0 auto;
  padding: 0px 30px;
  ul {
    display: flex;
  }
  li {
    margin-left: 4rem;
    list-style-type: none;
  }
  a {
    color: #ccc;
    font-weight: bold;
    text-decoration: none;
    font-size: 1rem;
  }
  a:hover {
    opacity: 0.7;
  }
}
.header-logo {
  margin: 6px 0;
  img {
    height: 25px;
  }
}
@media screen and (max-width: 750px) {
  .header-container {
    padding: 0;
    justify-content: center;
    li {
      margin-left: 1.5rem;
    }
  }
  .header-logo {
    img {
      display: none;
    }
  }
}