.transition {
  transition: .3s cubic-bezier(.3, 0, 0, 1.3)
}

.card {
  background-color: #aaa;
  height: 400px;
  width: 300px;
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
  overflow: hidden;
  border-radius: 3px;

  img {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .content {
    margin: 0 10px;
  }

  h3 {
    font-size: 26px;
  }

  p {
    font-size: 100%;
    // line-height: 1;
  }
}

.card:hover {
  box-shadow: 0px 30px 30px rgba(0,0,0,0.2);
  height: 430px;
  width: 330px;
}

h2 {
  text-align: center;
  position: absolute;
  z-index: 9999;
  font-size: 26px;
  width: 100%;
}

h2 small {
  font-weight: normal;
  font-size: 0%;
  color: rgba(0,0,0,0.5);
}

.card:hover h2 {
  margin-top: 20px;
}

.card:hover h2 small {
  font-size: 65%;
}